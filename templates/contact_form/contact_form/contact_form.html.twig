{% extends 'base.html.twig' %}

{% block title %}Contact Form{% endblock %}

{% block body %}

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="container">

        <div class="row">
            <h1 class="p-4">Contact Form</h1>
            <!-- Aquí se mostrarían todos los errores que han ocurrido al formulario en general -->
            <span style="color:red">{{ form_errors(form) }}</span>
        </div>

        <div class="form-group row">
            {{ form_label(form.full_name, 'First name *', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.full_name) }}
                <span style="color:red">{{ form_errors(form.full_name) }}</span>
            </div>
        </div>

        <div class="form-group row">
            {{ form_label(form.subject, 'Subject *', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.subject) }}
                <span style="color:red">{{ form_errors(form.subject) }}</span>
            </div>
        </div>

        <div class="form-group row">
            {{ form_label(form.body, 'Body *', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.body) }}
                <span style="color:red">{{ form_errors(form.body) }}</span>
            </div>
        </div>

        <div class="row">
            <div class="col-2"></div>
            <div class="col-10">
                <input type="submit" value="Contactar!" class="btn btn-primary">
            </div>
        </div>
    </div>
    {{ form_end(form) }}

{% endblock %}
